<section>
    <div class="container mt-4">
      <div class="row">
        <a href="/admin/add-product" class="btn btn-success ml-auto">Add products</a>
      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      
      <td>{{@index}}</td>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a class="btn btn-primary" href="admin/edit-product">edit</a>
        <a class="btn btn-danger" href="delete-product/{{this._id}}" onclick="return confirm('do you want to delete {{this.Name}}')">delete</a>
      </td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
    </div>
</section>